switch (FEAT_TRAINS, SELF, switch_crh6a2_articulated_part, extra_callback_info1) {
    1..2: return crh6a2;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

switch (FEAT_TRAINS, SELF, switch_crh6a2_cargo_subtype, cargo_subtype) {
    0: return string(STR_PROTOTYPE);
    1: return string(STR_GUANGSHEN);
    2: return string(STR_GUANGZHU);
    3: return string(STR_TIANFU);
    4: return string(STR_TIANFU_GREEN);
    5: return string(STR_ZHENGJIAO);
    6: return string(STR_ZHUJI);
    7: return string(STR_ZHUSANJIAO_BLUE);
    8: return string(STR_ZHUSANJIAO_ORANGE);
    return CB_RESULT_NO_TEXT;
}

