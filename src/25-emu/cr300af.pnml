item (FEAT_TRAINS, cr300af) {
    property {
        // Menu
        name:                           string(STR_NAME_CR300AF);
        sprite_id:                      SPRITE_ID_NEW_TRAIN;
        misc_flags:                     bitmask(TRAIN_FLAG_AUTOREFIT, TRAIN_FLAG_MU);
        engine_class:                   ENGINE_CLASS_ELECTRIC;

        // Availability
        climates_available:             ALL_CLIMATES;
        introduction_date:              date(2018,09,30);
        model_life:                     VEHICLE_NEVER_EXPIRES;
        vehicle_life:                   30;
        track_type:                     SAAA;

        // Cargo
        refittable_cargo_classes:       bitmask(CC_PASSENGERS);
        non_refittable_cargo_classes:   0;
        cargo_allow_refit:              [PASS, TOUR, YETI, YETY];
        cargo_disallow_refit:           [];
        refit_cost:                     0;
        default_cargo_type:             PASS;
        ai_special_flag:                AI_FLAG_PASSENGER;
        cargo_capacity:                 48;
        loading_speed:                  8 << param_loading_speed;
        cargo_age_period:               400 << param_cargo_decay;

        // Stats
        speed:                          250 km/h;
        power:                          1365 kW;
        weight:                         53 ton;
        tractive_effort_coefficient:    0.133;
        cost_factor:                    73;
        running_cost_base:              RUNNING_COST_ELECTRIC;
        running_cost_factor:            59;
        reliability_decay:              5;
        bitmask_vehicle_info:           bitmask(2);
    }
    graphics {
        // Menu
        additional_text:                string(STR_DESC_6, string(STR_CRH_CAN_ATTACH_WAGON), string(STR_CR300AF_NICKNAME), string(STR_CR300_CONSIST), string(STR_RELIABILITY_5), string(STR_CR300_HEAD_SEAT));
        can_attach_wagon:               crhwagon;
        start_stop:                     mu4to24car;

        // Graphics
        default:                        switch_cr300af_front_graphics;
        purchase:                       spriteset_cr300af_purchase_original;
        articulated_part:               switch_cr300af_articulated_part;

        // Stats
        length:                         switch_length_2_8_2;
        speed:                          250;
        power:                          return 0;
        purchase_power:                 return 1830; // HP
        tractive_effort_coefficient:    return 0;
        purchase_tractive_effort_coefficient: return int(0.133*255);
        cargo_capacity:                 switch_cr300af_head_capacity;
        cargo_age_period:               20 * 5 * cafedecayfactor() << param_cargo_decay;
        cost_factor:                    73;
        running_cost_factor:            59 * runningcostfactor() * cafecostfactor() + 20;
        purchase_running_cost_factor:   256;
        purchase_cargo_capacity:        48/3;
    }

    // Multiple Unit Wagons
    livery_override(zemuw) {
        default:                        switch_cr300af_wagon_graphics;
        cargo_capacity:                 switch_cr300af_wagon_capacity;
        power:                          switch_cr300af_wagon_power;
        tractive_effort_coefficient:    switch_cr300af_wagon_traction;
        length:                         switch_length_2_8_2;
        weight:                         53;
        can_attach_wagon:               muhead;
        cargo_age_period:               (switch_crh_wagon_cargo_decay() * cafedecayfactor()) << param_cargo_decay;
        bitmask_vehicle_info:           switch_crh_wagon_bitmask;
        articulated_part:               switch_crh_wagon_articulated_part;
        running_cost_factor:            (switch_cr300af_wagon_running() + crhspeedcost()) * runningcostfactor() * cafecostfactor() + accostfactor();
    }
    livery_override(zymuw) {
        default:                        switch_cr300af_wagon_graphics;
        cargo_capacity:                 switch_cr300af_wagon_capacity;
        power:                          switch_cr300af_wagon_power;
        tractive_effort_coefficient:    switch_cr300af_wagon_traction;
        length:                         switch_length_2_8_2;
        weight:                         53;
        can_attach_wagon:               muhead;
        cargo_age_period:               (switch_crh_wagon_cargo_decay() * cafedecayfactor()) << param_cargo_decay;
        bitmask_vehicle_info:           switch_crh_wagon_bitmask;
        articulated_part:               switch_crh_wagon_articulated_part;
        running_cost_factor:            (switch_cr300af_wagon_running() + crhspeedcost()) * runningcostfactor() * cafecostfactor() + accostfactor();
    }
    livery_override(zsmuw) {
        default:                        switch_cr300af_wagon_graphics;
        cargo_capacity:                 switch_cr300af_wagon_capacity;
        power:                          switch_cr300af_wagon_power;
        tractive_effort_coefficient:    switch_cr300af_wagon_traction;
        length:                         switch_length_2_8_2;
        weight:                         53;
        can_attach_wagon:               muhead;
        cargo_age_period:               (switch_crh_wagon_cargo_decay() * cafedecayfactor()) << param_cargo_decay;
        bitmask_vehicle_info:           switch_crh_wagon_bitmask;
        articulated_part:               switch_crh_wagon_articulated_part;
        running_cost_factor:            (switch_cr300af_wagon_running() + crhspeedcost()) * runningcostfactor() * cafecostfactor() + accostfactor();
    }
    livery_override(swmuw) {
        default:                        switch_cr300af_wagon_graphics;
        cargo_capacity:                 switch_cr300af_wagon_capacity;
        power:                          switch_cr300af_wagon_power;
        tractive_effort_coefficient:    switch_cr300af_wagon_traction;
        length:                         switch_length_2_8_2;
        weight:                         53;
        can_attach_wagon:               muhead;
        cargo_age_period:               (switch_crh_wagon_cargo_decay() * cafedecayfactor()) << param_cargo_decay;
        bitmask_vehicle_info:           switch_crh_wagon_bitmask;
        articulated_part:               switch_crh_wagon_articulated_part;
        running_cost_factor:            (switch_cr300af_wagon_running() + crhspeedcost()) * runningcostfactor() * cafecostfactor() + accostfactor();
    }
    livery_override(zecmuw) {
        default:                        switch_cr300af_wagon_graphics;
        cargo_capacity:                 switch_cr300af_wagon_capacity;
        power:                          switch_cr300af_wagon_power;
        tractive_effort_coefficient:    switch_cr300af_wagon_traction;
        length:                         switch_length_2_8_2;
        weight:                         53;
