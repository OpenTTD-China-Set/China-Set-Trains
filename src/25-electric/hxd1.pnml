// Begin HXD1

// Graphics

// Purchase Menu
spriteset (spriteset_hxd1_purchase_original, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_purchase ("25-electric", "hxd1-front")
}

// Vehicle
spriteset (spriteset_hxd1_front, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_standard ("25-electric", "hxd1-front")
}
spriteset (spriteset_hxd1_back, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_standard ("25-electric", "hxd1-back")
}

switch (FEAT_TRAINS, SELF, switch_hxd1_articulated_part, extra_callback_info1) {
    1..5: return hxd1;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

switch (FEAT_TRAINS, SELF, switch_hxd1_graphics, position_in_articulated_veh % 6) {
    1: spriteset_hxd1_front;
    4: spriteset_hxd1_back;
    empty_sprites;
}


item (FEAT_TRAINS, hxd1) {
    property {
        // Menu
        name:                           string(STR_NAME_HXD1);
        sprite_id:                      SPRITE_ID_NEW_TRAIN;
        misc_flags:                     bitmask(TRAIN_FLAG_AUTOREFIT);
        engine_class:                   ENGINE_CLASS_ELECTRIC;

        // Availability
        climates_available:             ALL_CLIMATES;
        introduction_date:              date(2006,01,01);
        model_life:                     VEHICLE_NEVER_EXPIRES;
        vehicle_life:                   30;
        track_type:                     SACA;

        // Cargo
        refittable_cargo_classes:       bitmask(CC_PASSENGERS);
        non_refittable_cargo_classes:   0;
        cargo_allow_refit:              [];
        cargo_disallow_refit:           [];
        refit_cost:                     0;
        default_cargo_type:             PASS;
        ai_special_flag:                AI_FLAG_CARGO;
        cargo_capacity:                 1;
        loading_speed:                  8 << param_loading_speed;
        cargo_age_period:               185 << param_cargo_decay;

        // Stats
        speed:                          120 km/h;
        power:                          9600 kW;
        weight:                         184 ton;
        tractive_effort_coefficient:    0.421;
        cost_factor:                    127;
        running_cost_base:              RUNNING_COST_ELECTRIC;
        running_cost_factor:            104;
        reliability_decay:              8;
    }
    graphics {
        // Menu
        additional_text:                string(STR_DESC_4, string(STR_FULL_NAME_HXD1), string(STR_ELECTRICITY_SUPPLY_NO), string(STR_HXD1_NICKNAME), string(STR_RELIABILITY, 8));
        can_attach_wagon:               locowagon;
        // Graphics
        default:                        switch_hxd1_graphics;
        purchase:                       spriteset_hxd1_purchase_original;
        articulated_part:               switch_hxd1_articulated_part;

        // Stats
        length:                         switch_length_2_4_2;
        cargo_capacity:                 0;
        cost_factor:                    136;
        running_cost_factor:            113 * runningcostfactor();
        purchase_running_cost_factor:   452;
        purchase_cargo_capacity:        0;
        bitmask_vehicle_info:           0;
    }
}

// End HXD1

