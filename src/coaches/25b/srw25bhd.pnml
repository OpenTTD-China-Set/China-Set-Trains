}
spriteset (spriteset_srw25bhd_93_94, ZOOM_LEVEL_IN_4X, BIT_DEPTH_32BPP) {
    template_standard ("coaches", "25b/srw25bhd-93-94")
}

switch (FEAT_TRAINS, SELF, switch_srw25bhd_articulated_part, extra_callback_info1) {
    1..2: return srw25bhd;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}
switch (FEAT_TRAINS, SELF, switch_srw25bhd_cargo_subtype, cargo_subtype) {
    0: return string(STR_CHANGSHA);
    1: return string(STR_GAOZU_GREEN);
    2: return string(STR_RED);
    3: return string(STR_URUMQI);
    4: return string(STR_93_94);
    return CB_RESULT_NO_TEXT;
}

switch (FEAT_TRAINS, SELF, switch_srw25bhd_graphics_subtype, cargo_subtype) {
    0: spriteset_srw25bhd_changsha;
    1: spriteset_srw25bhd_green;
    2: spriteset_srw25bhd_red;
    3: spriteset_srw25bhd_urumqi;
    4: spriteset_srw25bhd_93_94;
}

switch (FEAT_TRAINS, SELF, switch_srw25bhd_graphics, position_in_articulated_veh % 3) {
    1: switch_srw25bhd_graphics_subtype;
    empty_sprites;
}

switch (FEAT_TRAINS, SELF, switch_srw25bhd_capacity, position_in_articulated_veh % 3) {
    1: return 50;
    return 0;
}


