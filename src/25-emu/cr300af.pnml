switch (FEAT_TRAINS, SELF, switch_cr300af_articulated_part, extra_callback_info1) {
    1..2: return cr300af;
    return CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}

switch (FEAT_TRAINS, SELF, switch_cr300af_front_graphics, position_in_articulated_veh % 3) {
    1: spriteset_cr300af_front;
    empty_sprites;
}

switch (FEAT_TRAINS, SELF, switch_cr300af_head_capacity, position_in_articulated_veh % 3) {
    1: return 36;
    return 0;
}

switch (FEAT_TRAINS, SELF, switch_cr300af_middle_wagon_back_tp, ((position_in_consist / 3) + 1) == (num_vehs_in_consist * 11 / 48)) {
    1: spriteset_cr300af_middle_p;
    spriteset_cr300af_middle_p_reversed;
}

switch (FEAT_TRAINS, SELF, switch_cr300af_middle_wagon_front_tp, ((position_in_consist / 3) + 1) == (num_vehs_in_consist / 16)) {
    1: spriteset_cr300af_middle_p;
    spriteset_cr300af_middle_p_reversed;
}

switch (FEAT_TRAINS, SELF, switch_cr300af_middle_wagon_is_which_tp, ((position_in_consist / 3) + 1) == (num_vehs_in_consist * 11 / 48) || (((position_in_consist / 3) - 2) == (num_vehs_in_consist * 11 / 48))) {
    1: switch_cr300af_middle_wagon_back_tp;
    switch_cr300af_middle_wagon_front_tp;
}

switch (FEAT_TRAINS, SELF, switch_cr300af_if_middle_wagon_is_tp, (((position_in_consist / 3) + 1) == (num_vehs_in_consist * 11 / 48) || (((position_in_consist / 3) - 2) == (num_vehs_in_consist * 11 / 48))) || (((position_in_consist / 3) + 1) == (num_vehs_in_consist / 16) || (((position_in_consist / 3) - 2) == (num_vehs_in_consist / 16)))) {
    1: switch_cr300af_middle_wagon_is_which_tp;
    spriteset_cr300af_middle_m;
}

switch (FEAT_TRAINS, SELF, switch_cr300af_middle_wagon_half_long, ((position_in_consist / 3) + 1) == (num_vehs_in_consist / 6)) {
    1: spriteset_cr300af_cab_reconect;
    spriteset_cr300af_cab_reconect_reversed;
}

switch (FEAT_TRAINS, SELF, switch_cr300af_middle_wagon_reconect, (((position_in_consist / 3) + 1) == (num_vehs_in_consist / 6)) || ((position_in_consist / 3) == (num_vehs_in_consist / 6))) {
    1: switch_cr300af_middle_wagon_half_long;
    switch_cr300af_if_middle_wagon_is_tp;
}


switch (FEAT_TRAINS, SELF, switch_cr300af_middle_wagon_tp_meddium, ((position_in_consist / 3) + 1) == (num_vehs_in_consist / 8)) {
    1: spriteset_cr300af_middle_p;
    spriteset_cr300af_middle_p_reversed;
}

switch (FEAT_TRAINS, SELF, switch_cr300af_if_middle_wagon_tp_meddium, (((position_in_consist / 3) + 1) == (num_vehs_in_consist / 8)) || (((position_in_consist / 3) - 2) == (num_vehs_in_consist / 8))) {
    1: switch_cr300af_middle_wagon_tp_meddium;
    spriteset_cr300af_middle_m;
}


switch (FEAT_TRAINS, SELF, switch_cr300af_if_middle_wagon_tp_short, ((position_in_consist / 3) + 1) == (num_vehs_in_consist / 6)) {
    1: spriteset_cr300af_middle_p;
    spriteset_cr300af_middle_m;
}


switch (FEAT_TRAINS, SELF, switch_cr300af_length_class, num_vehs_in_consist / 3) {
    2..6:   switch_cr300af_if_middle_wagon_tp_short;
    7..12:  switch_cr300af_if_middle_wagon_tp_meddium;
    switch_cr300af_middle_wagon_reconect;
}

switch (FEAT_TRAINS, SELF, switch_cr300af_if_wagon_end, position_in_consist_from_end == 1) {
    1: spriteset_cr300af_cab;
    switch_cr300af_length_class;
}

switch (FEAT_TRAINS, SELF, switch_cr300af_wagon_graphics, (position_in_consist_from_end % 3) == 1) {
    1: switch_cr300af_if_wagon_end;
    empty_sprites;
}
